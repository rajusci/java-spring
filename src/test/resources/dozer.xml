<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <configuration>
        <stop-on-errors>false</stop-on-errors>
        <date-format>yyyy-MM-dd</date-format>
        <wildcard>true</wildcard>
        <custom-converters> <!-- these are always bi-directional -->
            <converter type="com.inspirenetz.api.util.InDozerTimeConverter" >
                <class-a>java.lang.String</class-a>
                <class-b>java.sql.Time</class-b>
            </converter>
            <converter type="com.inspirenetz.api.util.InDozerCollectionConverter" >
                <class-a>java.lang.String</class-a>
                <class-b>java.util.Collection</class-b>
            </converter>
        </custom-converters>
    </configuration>

    <mapping map-null="false">
        <class-a>com.inspirenetz.api.core.incustomization.attrext.AttributeExtendedEntityMap</class-a>
        <class-b>com.inspirenetz.api.core.domain.Sale</class-b>
    </mapping>
    <mapping map-null="false">
        <class-a>com.inspirenetz.api.core.incustomization.attrext.AttributeExtendedEntityMap</class-a>
        <class-b>com.inspirenetz.api.core.domain.SaleSKU</class-b>
    </mapping>
    <mapping map-null="false">
        <class-a>com.inspirenetz.api.core.incustomization.attrext.AttributeExtendedEntityMap</class-a>
        <class-b>com.inspirenetz.api.core.domain.LoyaltyProgram</class-b>
    </mapping>
</mappings>